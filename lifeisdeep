// Config
const GRAVITY = 0.5;
const FRICTION = 0.85; 
const MOVE_SPEED = 1.0; 
const JUMP_FORCE = -9; 
const SPRING_FORCE = -12; 
const PLATFORM_GAP = 90; 

let state = {
    mode: 'START',
    frames: 0,
    time: 0,
    difficulty: 2,
    bgScroll: 0
};

// Player (Bear)
const player = {
    x: 240, y: 100,
    w: 40, h: 46, 
    boxW: 28, boxH: 42,
    vx: 0, vy: 0,
    hp: 5, money: 0,
    invincible: 0,
    facingRight: true,
    animState: 'idle',
    runFrame: 0,
    onGround: false
};

let platforms = [];
let particles = [];
let eventHistory = [];
let clouds = [];

// Data
const TRAPS = [
    { name: "ËÅöÈ§ê", hp: 1, money: 500, weight: 100 },
    { name: "Ê©üËªäÁ∂≠‰øÆ", hp: 1, money: 500, weight: 100 },
    { name: "ÈÅïÂÅúÁΩ∞ÂñÆ", hp: 1, money: 1000, weight: 80 },
    { name: "ËÖ∏ËÉÉÁÇé", hp: 1, money: 2000, weight: 60 },
    { name: "Á∂≤Ë≥ºÊâãÊªë", hp: 1, money: 2000, weight: 60 },
    { name: "Áπ≥ÊâÄÂæóÁ®Ö", hp: 1, money: 2000, weight: 50 },
    { name: "Ë¢´Ë£ÅÂì°", hp: 1, money: 5000, weight: 30 },
    { name: "ÁÑ°Ëñ™ÂÅá", hp: 1, money: 10000, weight: 20 },
    { name: "Ë∑üÊúÉË¢´ÂÄí", hp: 1, money: 10000, weight: 20 },
    { name: "Ë∑ØÂè£ËªäÁ¶ç", hp: 1, money: 20000, weight: 10 },
    { name: "ÊäïË≥áÂ§±Âà©", hp: 1, money: 30000, weight: 5 },
    { name: "ÂâµÊ•≠Â§±Êïó", hp: 2, money: 50000, weight: 3 },
    { name: "ËûçË≥áÁàÜÂÄâ", hp: 2, money: "HALF", weight: 2 }
];

const ITEMS = [
    { name: "ÂèãÂñÑÊôÇÂÖâ", hp: 1, money: 500, icon: "üçô", color: "#66BB6A", type: "add" },
    { name: "0050", hp: 1, money: 1.05, icon: "üìà", color: "#EC407A", type: "mult_0050" },
    { name: "NVIDIA", hp: 1, money: 2, icon: "ü§ñ", color: "#76b900", type: "mult_nvidia" },
    { name: "‰∏≠ÁôºÁ•®", hp: 1, money: 1000, icon: "üßæ", color: "#29B6F6", type: "add" },
    { name: "Â®ÅÂäõÂΩ©", hp: 1, money: 30000, icon: "üé´", color: "#FFA726", type: "add" },
    { name: "ÈÅéÂπ¥Á¥ÖÂåÖ", hp: 1, money: 10000, icon: "üßß", color: "#EF5350", type: "add" },
