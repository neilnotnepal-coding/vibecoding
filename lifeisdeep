// Audio
const actx = new (window.AudioContext || window.webkitAudioContext)();
let nextNoteTime = 0;
let noteIndex = 0;
let isMusicPlaying = false;
const MELODY = [64, 67, 71, 74, 76, 74, 71, 67, 65, 69, 72, 77, 76, 72, 69, 65];

// --- Drawing Helpers ---
function drawRoundedRect(ctx, x, y, w, h, r, fill, stroke) {
    ctx.beginPath();
    ctx.roundRect(x, y, w, h, r);
    if (fill) { ctx.fillStyle = fill; ctx.fill(); }
    if (stroke) { ctx.strokeStyle = stroke; ctx.lineWidth = 2; ctx.stroke(); }
}
function drawCircle(ctx, x, y, r, fill) {
    ctx.beginPath();
    ctx.arc(x, y, r, 0, Math.PI * 2);
    ctx.fillStyle = fill;
    ctx.fill();
}
function drawCloud(ctx, x, y, scale) {
    ctx.save();
    ctx.translate(x, y);
    ctx.scale(scale, scale);
    ctx.fillStyle = "rgba(255, 255, 255, 0.85)";
    ctx.beginPath();
    ctx.arc(0, 0, 30, 0, Math.PI * 2);
    ctx.arc(25, -10, 35, 0, Math.PI * 2);
    ctx.arc(50, 0, 30, 0, Math.PI * 2);
    ctx.fill();
    ctx.restore();
}

// --- Background ---
function initClouds() {
    clouds = [];
    for(let i=0; i<6; i++) {
        clouds.push({
            x: Math.random() * 480,
            y: Math.random() * 400,
            scale: 0.5 + Math.random() * 0.5,
            speed: 0.1 + Math.random() * 0.2
        });
    }
}
function drawBackground() {
    let grad = ctx.createLinearGradient(0, 0, 0, canvas.height);
    grad.addColorStop(0, '#81D4FA'); 
    grad.addColorStop(1, '#E1F5FE'); 
    ctx.fillStyle = grad;
    ctx.fillRect(0, 0, canvas.width, canvas.height);

    ctx.save();
    ctx.shadowColor = "rgba(255, 255, 200, 0.5)";
    ctx.shadowBlur = 40;
    drawCircle(ctx, 420, 60, 30, "#FFF9C4");
    ctx.restore();

    state.bgScroll += state.difficulty * 0.1;
    let offset = state.bgScroll % canvas.width;

    ctx.fillStyle = '#A5D6A7'; 
    ctx.beginPath();
    ctx.moveTo(0, canvas.height);
    for(let i=0; i<=canvas.width*2; i+=20) {
        let x = i - offset*0.5; 
        ctx.lineTo(x, canvas.height - 150 + Math.sin(i*0.015)*40);
    }
    ctx.lineTo(canvas.width, canvas.height);
    ctx.lineTo(0, canvas.height);
    ctx.fill();

    ctx.fillStyle = '#81C784'; 
    ctx.beginPath();
    ctx.moveTo(0, canvas.height);
    for(let i=0; i<=canvas.width*2; i+=20) {
        let x = i - offset; 
        ctx.lineTo(x, canvas.height - 80 + Math.sin(i*0.02 + 1)*30);
    }
    ctx.lineTo(canvas.width, canvas.height);
    ctx.lineTo(0, canvas.height);
    ctx.fill();

    clouds.forEach(c => {
        c.x += c.speed;
        if(c.x > 550) c.x = -100;
        drawCloud(ctx, c.x, c.y, c.scale);
    });
}

// --- Platform Class ---
class Platform {
    constructor(y) {
        this.w = 110 + Math.random() * 60;
        this.h = 24; 
        this.x = Math.random() * (canvas.width - this.w);
        this.y = y;
        this.type = 'normal'; 
        this.data = null;
        this.decay = 30;
        this.maxDecay = 30;
        this.triggered = false; 
        this.active = true;
        this.dy = 0;

        const rand = Math.random();
        if (state.frames > 120) {
            if (rand < 0.2) {
                this.type = 'spike';
                this.data = this.pickTrap();
            } else if (rand < 0.35) {
                this.type = 'item';
                this.data = ITEMS[Math.floor(Math.random() * ITEMS.length)];
            } else if (rand < 0.40) {
                this.type = 'spring';
            } else if (rand < 0.55) { 
                this.type = 'fragile';
            }
        }
    }

    pickTrap() {
        let total = TRAPS.reduce((s, i) => s + i.weight, 0);
        let r = Math.random() * total;
        for (let t of TRAPS) {
            if (r < t.weight) return t;
            r -= t.weight;
        }
        return TRAPS[0];
    }

    draw() {
        if (!this.active) return;
        let y = this.y + this.dy;

        let color = '#90A4AE'; 
        let topColor = '#CFD8DC';
        
        if (this.type === 'normal') { color = '#546E7A'; topColor = '#78909C'; }
        if (this.type === 'spike') { color = '#5D4037'; topColor = '#8D6E63'; }
        if (this.type === 'item') { color = '#546E7A'; topColor = '#78909C'; }
        if (this.type === 'spring') { color = '#388E3C'; topColor = '#66BB6A'; }
        
        if (this.type === 'fragile') {
            let alpha = this.decay / this.maxDecay;
            ctx.globalAlpha = alpha;
            drawRoundedRect(ctx, this.x, y, this.w, this.h, 6, '#B0BEC5');
            ctx.strokeStyle = '#78909C'; ctx.lineWidth = 2;
            ctx.beginPath();
            ctx.moveTo(this.x + 10, y); ctx.lineTo(this.x + 20, y + 15);
            ctx.moveTo(this.x + this.w - 15, y); ctx.lineTo(this.x + this.w - 25, y + 15);
            ctx.stroke();
            if (this.triggered) {
                ctx.fillStyle = '#FF5252';
                ctx.fillRect(this.x+5, y + this.h - 4, (this.w-10) * alpha, 2);
                this.x += (Math.random()-0.5)*2;
            }
            ctx.globalAlpha = 1.0;
        } else {
            drawRoundedRect(ctx, this.x, y+4, this.w, this.h, 6, color);
            drawRoundedRect(ctx, this.x, y, this.w, this.h-4, 6, topColor);
        }

        if (this.type === 'spike') {
            let spikeW = 12;
            let num = Math.floor(this.w / spikeW);
            ctx.fillStyle = '#D32F2F'; 
            ctx.beginPath();
            for(let i=0; i<num; i++) {
                let sx = this.x + i*spikeW + 2;
                ctx.lineTo(sx, y);
                ctx.lineTo(sx + spikeW/2, y - 10);
                ctx.lineTo(sx + spikeW, y);
            }
            ctx.fill();
            
            ctx.font = "700 12px 'M PLUS Rounded 1c'";
            ctx.fillStyle = "#5D4037";
            ctx.textAlign = "center";
            ctx.fillText(this.data.name, this.x + this.w/2, y + 36);
        } else if (this.type === 'spring') {
            ctx.fillStyle = '#B2FF59';
            ctx.beginPath();
            ctx.roundRect(this.x + 10, y - 6, this.w - 20, 8, 4);
            ctx.fill();
        } else if (this.type === 'item') {
            let bob = Math.sin(state.frames * 0.1) * 3;
            let cy = y - 15 + bob;
            let cx = this.x + this.w/2;
            
            ctx.shadowColor = this.data.color;
            ctx.shadowBlur = 15;
            
            ctx.fillStyle = "rgba(255,255,255,0.9)";
            ctx.beginPath();
            ctx.arc(cx, cy, 18, 0, Math.PI*2);
            ctx.fill();
            ctx.shadowBlur = 0;
            
            ctx.font = "22px serif";
            ctx.textAlign = "center";
            ctx.textBaseline = "middle";
            ctx.fillText(this.data.icon, cx, cy + 2);
            ctx.textBaseline = "alphabetic"; 
        }
    }
}

// --- Player Drawing ---
function drawBear() {
    ctx.save();
    ctx.translate(player.x, player.y);
    
    if (!player.facingRight) {
        ctx.translate(player.w, 0);
        ctx.scale(-1, 1);
    }

    if (player.invincible > 0 && Math.floor(state.frames / 4) % 2 === 0) {
        ctx.globalAlpha = 0.5;
    }

    let bob = (player.animState === 'run') ? Math.sin(state.frames * 0.4) * 2 : 0;
    let tilt = (player.animState === 'run') ? Math.sin(state.frames * 0.4) * 0.1 : 0;
    
    if (player.animState === 'jump') { bob = -3; tilt = -0.1; }

    ctx.rotate(tilt);

    ctx.fillStyle = '#263238'; 
    ctx.beginPath();
    ctx.arc(8, 6+bob, 7, 0, Math.PI*2);
    ctx.arc(32, 6+bob, 7, 0, Math.PI*2);
    ctx.fill();

    ctx.fillStyle = '#263238';
    drawRoundedRect(ctx, 4, 12+bob, 32, 30, 10, '#263238');

    ctx.beginPath();
    ctx.arc(20, 14+bob, 18, 0, Math.PI*2);
    ctx.fill();

    ctx.strokeStyle = '#FFFFFF';
    ctx.lineWidth = 4;
    ctx.lineCap = 'round';
    ctx.lineJoin = 'round';
    ctx.beginPath();
    ctx.moveTo(12, 28+bob);
    ctx.lineTo(20, 36+bob);
    ctx.lineTo(28, 28+bob);
    ctx.stroke();

    ctx.fillStyle = '#546E7A';
    ctx.beginPath();
    ctx.ellipse(20, 16+bob, 6, 4, 0, 0, Math.PI*2);
    ctx.fill();
    ctx.fillStyle = '#000';
    ctx.beginPath();
    ctx.arc(20, 15+bob, 2, 0, Math.PI*2);
    ctx.fill();

    if (player.animState === 'hurt') {
        ctx.strokeStyle = '#fff';
        ctx.lineWidth = 2;
        ctx.beginPath(); ctx.moveTo(13, 12+bob); ctx.lineTo(17, 16+bob); ctx.stroke();
        ctx.beginPath(); ctx.moveTo(17, 12+bob); ctx.lineTo(13, 16+bob); ctx.stroke();
        ctx.beginPath(); ctx.moveTo(23, 12+bob); ctx.lineTo(27, 16+bob); ctx.stroke();
        ctx.beginPath(); ctx.moveTo(27, 12+bob); ctx.lineTo(23, 16+bob); ctx.stroke();
    } else {
        ctx.fillStyle = '#fff';
        ctx.beginPath(); ctx.arc(14, 12+bob, 2, 0, Math.PI*2); ctx.fill();
        ctx.beginPath(); ctx.arc(26, 12+bob, 2, 0, Math.PI*2); ctx.fill();
    }

    ctx.fillStyle = '#263238';
    if(player.animState === 'run') {
        let legOffset = Math.sin(state.frames * 0.4) * 4;
        drawCircle(ctx, 12 + legOffset, 42+bob, 5, '#263238');
        drawCircle(ctx, 28 - legOffset, 42+bob, 5, '#263238');
    } else {
        drawCircle(ctx, 12, 42+bob, 5, '#263238');
        drawCircle(ctx, 28, 42+bob, 5, '#263238');
    }
    drawCircle(ctx, 6, 26+bob, 4, '#263238'); 
    drawCircle(ctx, 34, 26+bob, 4, '#263238');

    ctx.restore();
}

// --- Particles ---
function createParticle(x, y, color, type='circle') {
    particles.push({
        x: x, y: y,
        vx: (Math.random()-0.5)*6,
        vy: (Math.random()-0.5)*6,
        life: 40,
        color: color,
        type: type,
        size: 3 + Math.random()*4
    });
}
function updateAndDrawParticles() {
    for(let i=0; i<particles.length; i++) {
        let p = particles[i];
        p.x += p.vx;
        p.y += p.vy;
        p.life--;
        p.vy += 0.1; 
        ctx.globalAlpha = p.life / 40;
        ctx.fillStyle = p.color;
        
        if (p.type === 'star') {
            ctx.save();
            ctx.translate(p.x, p.y);
            ctx.rotate(state.frames * 0.2);
            ctx.beginPath();
            ctx.moveTo(0, -p.size);
            ctx.lineTo(p.size*0.3, -p.size*0.3);
            ctx.lineTo(p.size, 0);
            ctx.lineTo(p.size*0.3, p.size*0.3);
            ctx.lineTo(0, p.size);
            ctx.lineTo(-p.size*0.3, p.size*0.3);
            ctx.lineTo(-p.size, 0);
            ctx.lineTo(-p.size*0.3, -p.size*0.3);
            ctx.fill();
            ctx.restore();
        } else {
            ctx.beginPath();
            ctx.arc(p.x, p.y, p.size, 0, Math.PI*2);
            ctx.fill();
        }
        ctx.globalAlpha = 1;
        if(p.life <= 0) { particles.splice(i, 1); i--; }
    }
}

// --- Logic ---
function init() {
    state.mode = 'PLAYING';
    state.frames = 0;
    state.time = 0;
    state.difficulty = 2;
    state.bgScroll = 0;
    
    player.x = 240; player.y = 100;
    player.vx = 0; player.vy = 0;
    player.hp = 5; player.money = 0;
    player.invincible = 0;

    platforms = [];
    eventHistory = [];
    particles = [];
    initClouds();

    for(let i=0; i<9; i++) {
        let p = new Platform(canvas.height - 100 - i * PLATFORM_GAP);
        p.type = 'normal';
        platforms.push(p);
    }

    ui.start.classList.add('hidden');
    ui.result.classList.add('hidden');
    ui.hud.classList.remove('hidden');
    
    updateHUD();
    
    if (actx.state === 'suspended') actx.resume();
    isMusicPlaying = true;
    nextNoteTime = actx.currentTime;
    
    requestAnimationFrame(loop);
}

function loop() {
    if (state.mode !== 'PLAYING') return;
    state.frames++;
    if (state.frames % 60 === 0) {
        state.time++;
        state.difficulty += 0.005; 
        addPassiveMoney();
    }
    updatePhysics();
    updateMusic();
    draw();
    requestAnimationFrame(loop);
}

const keys = {};
window.addEventListener('keydown', e => keys[e.code] = true);
window.addEventListener('keyup', e => keys[e.code] = false);

function updatePhysics() {
    if (keys['ArrowLeft']) {
        player.vx -= MOVE_SPEED;
        player.facingRight = false;
        player.animState = 'run';
    } else if (keys['ArrowRight']) {
        player.vx += MOVE_SPEED;
        player.facingRight = true;
        player.animState = 'run';
    } else {
        player.animState = 'idle';
    }
    
    player.vx *= FRICTION;
    player.x += player.vx;

    if (player.x < 0) player.x = 0;
    if (player.x + player.w > canvas.width) player.x = canvas.width - player.w;

    player.vy += GRAVITY;
    player.y += player.vy;

    player.onGround = false;
    let groundPlatform = null;

    platforms.forEach(p => {
        if (!p.active) return;
        p.y -= state.difficulty;
        
        if (p.type === 'fragile' && p.triggered) {
            p.decay--;
            if (p.decay <= 0) {
                p.active = false;
                playSound('break');
                for(let k=0; k<6; k++) createParticle(p.x + p.w/2, p.y, '#90A4AE');
            }
        }

        let px = player.x + (player.w - player.boxW)/2;
        let pw = player.boxW;
        
        if (player.vy >= 0 && 
            px + pw > p.x && px < p.x + p.w &&
            player.y + player.h > p.y &&
            player.y + player.h < p.y + p.h + 16) {
            groundPlatform = p;
        }
    });

    if (groundPlatform) {
        player.onGround = true;
        player.y = groundPlatform.y - player.h;
        player.vy = -state.difficulty; // Stick to platform velocity

        // Fix Jitter: Force idle animation if standing still on platform
        if (Math.abs(player.vx) < 0.1) player.animState = 'idle';
        
        if (groundPlatform.type === 'spring') {
            player.vy = SPRING_FORCE;
            groundPlatform.dy = 8;
            playSound('spring');
            for(let i=0; i<3; i++) createParticle(player.x+10, player.y+40, '#B2FF59', 'circle');
            player.onGround = false; // Detach immediately
        } else {
            if (groundPlatform.type === 'fragile') {
                if (!groundPlatform.triggered) groundPlatform.triggered = true;
            } else {
                handleTrigger(groundPlatform);
            }
        }
    } else {
        // Only switch to jump animation if falling significantly to avoid micro-jitter
        if (Math.abs(player.vy) > 2) player.animState = 'jump';
    }

    if (platforms[0].y < -50) platforms.shift();
    let lastP = platforms[platforms.length - 1];
    
    if (lastP.y < canvas.height - PLATFORM_GAP) {
        platforms.push(new Platform(canvas.height + 50));
    }

    if (player.y < 0) triggerGameOver("Ë¢´ÁîüÊ¥ªÂ£ìÂæóÂñò‰∏çÈÅéÊ∞£");
    if (player.y > canvas.height) triggerGameOver("Â¢úÂÖ•Ê∑±Ê∑µ");
    if (player.hp <= 0) triggerGameOver("È´îÂäõÈÄèÊîØ");
    if (player.invincible > 0) player.invincible--;
    
    platforms.forEach(p => { if(p.dy > 0) p.dy *= 0.8; });
}

function handleTrigger(p) {
    if (p.type === 'spike') {
        if (player.invincible === 0) {
            player.hp -= p.data.hp;
            playSound('hurt');
            player.vy = JUMP_FORCE; 
            player.invincible = 60;
            player.animState = 'hurt';
            let lost = (p.data.money === "HALF") ? Math.floor(player.money/2) : p.data.money;
            player.money -= lost;
            
            createFloatingText(p.data.name, player.x, player.y - 10, '#5D4037');
            createFloatingText(`-$${lost.toLocaleString()}`, player.x, player.y - 35, '#FF5252');
            
            eventHistory.push({type: 'bad', name: p.data.name, val: -lost});
            for(let i=0; i<5; i++) createParticle(player.x+15, player.y+20, '#FF5252');
        }
    } else if (p.type === 'item') {
        playSound('coin');
        player.hp = Math.min(5, player.hp + p.data.hp);
        let gain = 0;
        
        if (p.data.type === 'mult_nvidia') {
            if (player.money < 0) { gain = 50000; player.money += gain; } 
            else { let old = player.money; player.money = Math.floor(player.money * p.data.money); gain = player.money - old; }
        } else if (p.data.type === 'mult_0050') {
             if (player.money < 0) { gain = 10000; player.money += gain; }
             else { let old = player.money; player.money = Math.floor(player.money * p.data.money); gain = player.money - old; }
        } else if (p.data.type === 'add' || p.data.type === 'add_cost') {
            gain = p.data.money;
            player.money += gain;
        }

        createFloatingText(p.data.name, player.x, player.y - 40, '#0277BD');
        createFloatingText(`+$${gain.toLocaleString()}`, player.x, player.y - 15, '#F9A825');

        eventHistory.push({type: 'good', name: p.data.name, val: gain});
        p.type = 'normal';
        
        for(let i=0; i<8; i++) createParticle(player.x+15, player.y+15, '#FFD700', 'star');
    }
}

function addPassiveMoney() {
    let rate = 100;
    if (state.time > 300) rate = 500;
    if (state.time > 600) rate = 1000;
    if (state.time > 1200) rate = 10000;
    player.money += rate;
    updateHUD(rate);
}

// --- Audio & Helpers ---
function playSound(type) {
    if (actx.state === 'suspended') actx.resume();
    const osc = actx.createOscillator();
    const gain = actx.createGain();
    const now = actx.currentTime;
    osc.connect(gain);
    gain.connect(actx.destination);

    if (type === 'jump') {
        osc.frequency.setValueAtTime(150, now);
        osc.frequency.linearRampToValueAtTime(300, now + 0.1);
        gain.gain.setValueAtTime(0.1, now);
        gain.gain.linearRampToValueAtTime(0, now + 0.1);
        osc.start(now); osc.stop(now + 0.1);
    } else if (type === 'coin') {
        osc.type = 'sine';
        osc.frequency.setValueAtTime(1000, now);
        osc.frequency.exponentialRampToValueAtTime(2000, now + 0.1);
        gain.gain.setValueAtTime(0.1, now);
        gain.gain.linearRampToValueAtTime(0, now + 0.3);
        osc.start(now); osc.stop(now + 0.3);
    } else if (type === 'gameover') {
        osc.type = 'triangle';
        osc.frequency.setValueAtTime(200, now);
        osc.frequency.linearRampToValueAtTime(50, now + 1);
        gain.gain.setValueAtTime(0.3, now);
        gain.gain.linearRampToValueAtTime(0, now + 1);
        osc.start(now); osc.stop(now + 1);
    } else if (type === 'hurt') {
        osc.type = 'sawtooth';
        osc.frequency.setValueAtTime(100, now);
        gain.gain.setValueAtTime(0.2, now);
        gain.gain.exponentialRampToValueAtTime(0.01, now + 0.2);
        osc.start(now); osc.stop(now + 0.2);
    } else if (type === 'spring') {
        osc.type = 'sine';
        osc.frequency.setValueAtTime(200, now);
        osc.frequency.linearRampToValueAtTime(600, now + 0.2);
        gain.gain.setValueAtTime(0.1, now);
        gain.gain.linearRampToValueAtTime(0, now + 0.2);
        osc.start(now); osc.stop(now + 0.2);
    } else if (type === 'break') {
        osc.type = 'square';
        osc.frequency.setValueAtTime(100, now);
        gain.gain.setValueAtTime(0.1, now);
        gain.gain.exponentialRampToValueAtTime(0.01, now + 0.1);
        osc.start(now); osc.stop(now + 0.1);
    }
}

function updateMusic() {
    if (!isMusicPlaying || state.mode !== 'PLAYING') return;
    const now = actx.currentTime;
    if (now >= nextNoteTime) {
        let note = MELODY[noteIndex];
        let freq = 440 * Math.pow(2, (note - 69) / 12);
        let osc = actx.createOscillator();
        let gain = actx.createGain();
        osc.type = 'sine'; 
        osc.frequency.value = freq;
        gain.gain.setValueAtTime(0.03, now);
        gain.gain.exponentialRampToValueAtTime(0.001, now + 0.2);
        osc.connect(gain); gain.connect(actx.destination);
        osc.start(now); osc.stop(now + 0.2);
        nextNoteTime = now + 0.2; 
        noteIndex = (noteIndex + 1) % MELODY.length;
    }
}

function draw() {
    drawBackground();
    platforms.forEach(p => p.draw());
    updateAndDrawParticles();
    drawBear();
    
    // Top Spikes
    ctx.fillStyle = '#FF8A80';
    ctx.beginPath();
    for(let i=0; i<=canvas.width; i+=20) {
        ctx.lineTo(i+10, 20 + Math.sin(state.frames*0.1)*5);
        ctx.lineTo(i+20, 0);
    }
    ctx.lineTo(canvas.width, 0);
    ctx.lineTo(0, 0);
    ctx.fill();
}

function createFloatingText(text, x, y, color) {
    const el = document.createElement('div');
    el.innerHTML = text;
    el.className = 'float-text';
    el.style.color = color;
    // Removed border color style as border is removed
    el.style.left = (x) + 'px';
    el.style.top = (y) + 'px';
    wrapper.appendChild(el); 
    // V11: 1.2s removal
    setTimeout(() => el.remove(), 1200);
}

function updateHUD(rate) {
    document.getElementById('hp-display').innerText = player.hp;
    document.getElementById('money-display').innerText = player.money.toLocaleString();
    if(rate) document.getElementById('rate-display').innerText = `+${rate}/s`;
}

function triggerGameOver(reason) {
    state.mode = 'GAMEOVER';
    isMusicPlaying = false;
    playSound('gameover');
    ui.hud.classList.add('hidden');
    ui.result.classList.remove('hidden');
    ui.finalMoney.innerText = '$' + player.money.toLocaleString();
    
    let badCount = eventHistory.filter(e => e.type === 'bad').length;
    let goodCount = eventHistory.filter(e => e.type === 'good').length;
    
    let html = `<div style="text-align:center; margin-bottom:10px; font-weight:800; color:#546e7a;">Ê≠ªÂõ†: <span style="color:#E53935">${reason}</span></div>`;
    html += `<div class="stat-row" style="border-bottom:2px solid #ddd; margin-bottom:10px;"><span class="stat-bad">‰∫∫ÁîüÂ£û‰∫ã (${badCount})</span> <span class="stat-good">‰∫∫ÁîüÂ•Ω‰∫ã (${goodCount})</span></div>`;
    
    const counts = {};
    eventHistory.forEach(e => {
        if(!counts[e.name]) counts[e.name] = {count:0, val:0, type:e.type};
        counts[e.name].count++;
        counts[e.name].val += e.val;
    });
    
    for (let key in counts) {
        let c = counts[key];
        let color = c.type === 'bad' ? 'stat-bad' : 'stat-good';
        let sign = c.val > 0 ? '+' : '';
        html += `<div class="stat-row ${color}">
            <span>${key} x${c.count}</span>
            <span>${sign}${c.val.toLocaleString()}</span>
        </div>`;
    }
    ui.stats.innerHTML = html;
}

// Button Events
document.getElementById('btn-start').addEventListener('click', init);
document.getElementById('btn-restart').addEventListener('click', () => {
    ui.start.classList.remove('hidden');
    ui.result.classList.add('hidden');
    state.mode = 'START';
    state.frames = 0;
    requestAnimationFrame(function startLoop(){
        if(state.mode !== 'START') return;
        state.frames++;
        drawBackground();
        requestAnimationFrame(startLoop);
    });
});

document.getElementById('btn-screenshot').addEventListener('click', () => {
    const btnGroup = document.getElementById('btn-group');
    btnGroup.style.display = 'none'; // Hide buttons

    // Change background for clear screenshot
    wrapper.style.background = '#f2f2f2';
    canvas.style.opacity = '0'; // Hide game visual
    
    html2canvas(document.querySelector("#game-wrapper"), {
        backgroundColor: '#f2f2f2',
        scale: 2 // High res
    }).then(canvas => {
        const link = document.createElement('a');
        link.download = 'life_game_result.png';
        link.href = canvas.toDataURL();
        link.click();
        
        // Restore
        btnGroup.style.display = 'flex';
        wrapper.style.background = '#fff';
        document.getElementById('gameCanvas').style.opacity = '1';
    }).catch(err => {
        console.error(err);
        btnGroup.style.display = 'flex';
        wrapper.style.background = '#fff';
        document.getElementById('gameCanvas').style.opacity = '1';
    });
});

// Initial BG
requestAnimationFrame(function bgLoop(){
    if(state.mode !== 'START') return;
    state.frames++;
    drawBackground();
    requestAnimationFrame(bgLoop);
});

